extends base

block content     
    form(action="" method="POST" enctype="multipart/form-data").edit-profile__form
        label(for="avatar") Avatar
        input(type="file" id="avatar" name="avatar" accept="image/*")
        input(type="email" placeholder="Email" value=loggedInUser.email name="email" required) 
        input(type="text" placeholder="Name" value=loggedInUser.name name="name" required) 
        input(type="text" placeholder="Username" value=loggedInUser.username name="username" required) 
        input(type="text" placeholder="Location" value=loggedInUser.location name="location" required) 
        input(type="submit" value="Update Profile")
        
        if !loggedInUser.socialOnly
            div.edit-profile__password
            a(href="change-password") Change Password &rarr;